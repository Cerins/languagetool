<rules lang="lv" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd">
    <category id="STYLE_1" name="Stila kļūdas">
        <rulegroup id="POSITION_1" name="Pozicījas kļūda">
            <rule id="BECAUSE_1" name="Dēļ novietojums">
                <pattern>
                    <token>dēļ</token>
                    <token postag="(p|n).*" postag_regexp="yes"/>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="2" /> dēļ</suggestion></message>
                <example>Apstākļu dēļ</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_1" name="Lūgt vārdu">
                <pattern>
                    <token inflected="yes">ņemt</token>
                    <token>vārdu</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">lūgt</match> vārdu</suggestion>?</message>
                <example>Lūgt vārdu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_2" name="Iegūt pirmo vietu">
                <pattern>
                    <token inflected="yes">ņemt</token>
                    <token>pirmo</token>
                    <token>vietu</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">iegūt</match> pirmo</suggestion> vietu</suggestion>?</message>
                <example>Iegūt pirmo vietu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_3" name="Izvirzīt jautājumu">
                <pattern>
                    <token inflected="yes">pacelt</token>
                    <token>jautājumu</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">izvirzīt</suggestion> jautājumu</match>?</message>
                <example>Izvirzīt jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_4" name="Minēt piemērus">
                <pattern>
                    <token inflected="yes">pievest</token>
                    <token>piemērus</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">minēt</suggestion> piemērus</match>?</message>
                <example>Minēt piemērus</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_5" name="Pievērst uzmanību">
                <pattern>
                    <token inflected="yes">piegriezt</token>
                    <token>uzmanību</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">pievērst</suggestion> uzmanību</match>?</message>
                <example>Pievērst uzmanību</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_6" name="Izvirzīt jautājumu">
                <pattern>
                    <token inflected="yes">izvirzīt</token>
                    <token>jautājumu</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">izvirzīt</suggestion> jautājumu</match>?</message>
                <example>Izvirzīt jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_7" name="Ieteikt pirmo variantu">
                <pattern>
                    <token inflected="yes">Iestāties</token>
                    <token>par</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Ieteikt</suggestion> pirmo</match>?</message>
                <example>Ieteikt pirmo variantu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_8" name="Censties noslēgt līgumu">
                <pattern>
                    <token inflected="yes">Iet</token>
                    <token>uz</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Censties noslēgt</suggestion> līgumu</match>?</message>
                <example>Censties noslēgt līgumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_9" name="Runāt par jautājumiem">
                <pattern>
                    <token inflected="yes">Cilāt</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Runāt par</suggestion>jautājumiem</match>?</message>
                <example>Runāt par jautājumiem</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_10" name="Radīt protestu">
                <pattern>
                    <token inflected="yes">novest</token>
                    <token>līdz</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">radīt</match>protestu</suggestion>?</message>
                <example>Radīt protestu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_11" name="Runāt par jautājumu">
                <pattern>
                    <token inflected="yes">pakavēties</token>
                    <token>pie</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">runāt par</match>protestu</suggestion>?</message>
                <example>Runāt par jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_12" name="Ieviest sistēmu">
                <pattern>
                    <token inflected="yes">Pāriet</token>
                    <token>uz</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Ieviest</match>sistēmu</suggestion>?</message>
                <example>Ieviest sistēmu</example>
            </rule>
        </rulegroup>
    </category>
</rules>
