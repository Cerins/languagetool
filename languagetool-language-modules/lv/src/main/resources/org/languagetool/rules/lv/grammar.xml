    <category id="PUNKTUĀCIJA" name="Interpunkcijas kļūdas">
        <url>https://www.lps.lv/uploads/docs_module/Hansons_interpunkcija.pdf</url>
        <rule id="SAIKĻU_KOMATI_1" name="Teikumu daļu saikli">
            <antipattern>
                <token regexp="yes">\p{Punct}|–|—<exception postag="SENT_START"/></token>
                <token>bet|jo</token>
                <token>lai</token>
                <example>Bet lai paspētu, jāiziet agrāk</example>
            </antipattern>
            <pattern case_sensitive="yes">
                <token negate="yes" regexp="yes">\p{Punct}|–|—<exception postag="SENT_START"/></token>
                <marker><token regexp="yes">bet|jo|lai</token></marker>
                <token></token>
            </pattern>
            <message>Pirms saikļa “\2” jāliek komats: <suggestion>\1, \2 \3</suggestion> </message>
            <example>Ir saulaina diena, bet sola lietu</example>
            <example correction="diena, bet sola">Ir saulaina diena, <marker>bet</marker> sola lietu.</example>
        </rule>
        <rule id="KĀRTAS_SKAITĻI_GADS" name="Punkts pēc gada">
            <pattern><!-- NNNN. gada NN. [mēnesis] -->
                <token regexp="yes">[0-9]{4}</token>
                <token>gada</token>
                <message>Pēc gadskaitļa jāliek puntks: <suggestion>\1. \2</suggestion></message>
            </pattern>
        </rule>
        <rule id="KĀRTAS_SKAITĻI_MĒNEŠI" name="Punkts mēneša">
            <pattern><!-- NNNN. gada NN. [mēnesis] -->
                <token regexp="yes">[0-9][0-9]?</token>
                <token regexp="yes">janvāris|februāris|marts|aprīlis|maijs|jūnijs|jūlijs|augusts|septembris|oktobris|novembris|decembris</token>
                <message>Pēc mēneša dienas skaitļa jāliek puntks: <suggestion>\1. \2</suggestion></message>
            </pattern>
        </rule>
        <rule id="DEFISE_ATSTARPES_1" name="Ap defisēm nav atstarpju">
            <pattern>
                <token spacebefore="yes">-</token>
                <message>Ap defisēm nekad nav atstarpes: <suggestion>\1</suggestion></message>
            </pattern>
        </rule>
        <rule id="DEFISE_ATSTARPES_2" name="Ap defisēm nav atstarpju">
            <pattern>
                <token spaceafter="yes">-</token>
                <message>Ap defisēm nekad nav atstarpes: <suggestion>\1</suggestion></message>
            </pattern>
        </rule>
        <rule id="DOMUZĪME_1" name="Atstarpes ap domuzīmēm">
            <pattern>
                <token spacebefore="no">—</token>
                <message>Ap domuzīmēm vienmēr ir atstapres: <suggestion> \1 </suggestion></message>
            </pattern>
        </rule>
        <rule id="DOMUZĪME_2" name="Atstarpes ap domuzīmēm">
            <pattern>
