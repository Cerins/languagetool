<rules lang="lv" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd">
    <category id="STYLE_1" name="Stila kļūdas">
        <rulegroup id="POSITION_1" name="Pozicījas kļūda">
            <rule id="BECAUSE_1" name="Dēļ novietojums">
                <pattern>
                    <token>dēļ</token>
                    <token postag="(p|n).*" postag_regexp="yes"/>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="2" /> dēļ</suggestion></message>
                <example>Apstākļu dēļ</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_1" name="Lūgt vārdu">
                <pattern>
                    <token inflected="yes">ņemt</token>
                    <token>vārdu</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">lūgt</match> vārdu</suggestion>?</message>
                <example>Lūgt vārdu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_2" name="Iegūt pirmo vietu">
                <pattern>
                    <token inflected="yes">ņemt</token>
                    <token>pirmo</token>
                    <token>vietu</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">iegūt</match> pirmo vietu</suggestion>?</message>
                <example>Iegūt pirmo vietu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_3" name="Izvirzīt jautājumu">
                <pattern>
                    <token inflected="yes">Pacelt</token>
                    <token>jautājumu</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">izvirzīt</match> jautājumu</suggestion>?</message>
                <example>Izvirzīt jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_4" name="Minēt piemērus">
                <pattern>
                    <token inflected="yes">pievest</token>
                    <token>piemērus</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Minēt</match> piemērus</suggestion>?</message>
                <example>Minēt piemērus</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_5" name="Pievērst uzmanību">
                <pattern>
                    <token inflected="yes">piegriezt</token>
                    <token>uzmanību</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Pievērst</match> uzmanību</suggestion>?</message>
                <example>Pievērst uzmanību</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_6" name="Izvirzīt jautājumu">
                <pattern>
                    <token inflected="yes">stādīt</token>
                    <token>jautājumu</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Izvirzīt</match> jautājumu</suggestion>?</message>
                <example>Izvirzīt jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_7" name="Ieteikt pirmo variantu">
                <pattern>
                    <token inflected="yes">Iestāties</token>
                    <token>par</token>
		    <token>pirmo</token>
		    <token>variantu</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Ieteikt</match> pirmo variantu</suggestion>?</message>
                <example>Ieteikt pirmo variantu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_8" name="Censties noslēgt līgumu">
                <pattern>
                    <token inflected="yes">Iet</token>
                    <token>uz</token>
		    <token>līgumu</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Censties noslēgt</match> līgumu</suggestion>?</message>
                <example>Censties noslēgt līgumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_9" name="Runāt par jautājumiem">
                <pattern>
                    <token inflected="yes">Cilāt</token>
                    <token>jautājumus</token>	
		    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Runāt</match> par jautājumiem</suggestion>?</message>
                <example>Runāt par jautājumiem</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_10" name="Radīt protestu">
                <pattern>
                    <token inflected="yes">novest</token>
                    <token>līdz</token>
		    <token>protestam</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">radīt</match> protestu</suggestion>?</message>
                <example>Radīt protestu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_11" name="Runāt par jautājumu">
                <pattern>
                    <token inflected="yes">pakavēties</token>
                    <token>pie</token>
		    <token>jautājuma</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">runāt</match> par</suggestion> jautājumu</suggestion>?</message>
                <example>Runāt par jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_12" name="Ieviest sistēmu">
                <pattern>
                    <token inflected="yes">Pāriet</token>
                    <token>uz</token>
		    <token>sistēmu</token>
                </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Ieviest</match> sistēmu</suggestion>?</message>
                <example>Ieviest sistēmu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_13" name="Nodarboties ar politiku">
                <pattern>
                    <token inflected="yes">Piekopt</token>
		    <token>politiku</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Nodarboties</match> ar</match> politiku</suggestion>?</message>
                <example>Nodarboties ar politiku</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_14" name="Runāt par svarīgu jautājumu">
                <pattern>
                    <token inflected="yes">Pieskarties</token>
		    <token>svarīgam</token>
		    <token>jautājumam</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">runāt</match> par</match> svarīgu</suggestion> jautājumu</suggestion>?</message>
                <example>Runāt par svarīgu jautājumu</example>
            </rule>
        </rulegroup>
        <rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_15" name="Ievērot instrukciju">
                <pattern>
                    <token inflected="yes">Pieturēties</token>
		    <token>pie</token>
		    <token>instrukcijas</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">ievērot</match> instrukciju</suggestion>?</message>
                <example>Ievērot instrukciju</example>
            </rule>
        </rulegroup>
	<rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_16" name="Pildīt plānu">
                <pattern>
                    <token inflected="yes">Pieturēties</token>
		    <token>pie</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Pildīt</match>plānu</suggestion>?</message>
                <example>Pildīt plānu</example>
            </rule>
        </rulegroup>
	<rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_17" name="Rakstīt ar datoru">
                <pattern>
                    <token inflected="yes">Rakstīt</token>
		    <token>uz</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Rakstīt</match>ar</suggestion>?</message>
                <example>Rakstīt ar datoru</example>
            </rule>
        </rulegroup>
	<rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_18" name="Kontrolēt darbu">
                <pattern>
                    <token inflected="yes">Sekot</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Kontrolēt</match>darbu</suggestion>?</message>
                <example>Kontrolēt darbu</example>
            </rule>
        </rulegroup>
	<rulegroup id="VĀRDKOPU_KALKI" name="Vārdkopu kalki">
            <rule id="VĀRDKOPU_KALKS_19" name="Ieinteresēties par ceļošanu">
                <pattern>
                    <token inflected="yes">Saslimt</token>
		    <token>ar</token>
                    </pattern>
                <message>Vai gribēji ievadīt <suggestion><match no="1" postag=".*" case_conversion="preserve">Ieinteresēties par</match>ceļošanu</suggestion>?</message>
